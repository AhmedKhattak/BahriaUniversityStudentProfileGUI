<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"

    android:id="@+id/examseatingplancard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:id="@+id/dateval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/natext"
            android:layout_below="@+id/course"
            android:layout_marginBottom="4dp"
            />



        <TextView
            android:id="@+id/timeval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/natext"
            android:layout_toRightOf="@+id/time"
            android:layout_below="@+id/dateval"
            android:layout_marginBottom="4dp"
            />


        <TextView
            android:id="@+id/roomval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/natext"
            android:layout_toRightOf="@+id/room"
            android:layout_below="@+id/timeval"
            android:layout_marginBottom="4dp"

            />



        <TextView
            android:id="@+id/rowval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/natext"
            android:layout_toRightOf="@+id/row"
            android:layout_below="@+id/roomval"
            android:layout_marginBottom="4dp"
            />

        <TextView
            android:id="@+id/columnval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/natext"
            android:layout_toRightOf="@+id/column"
            android:layout_below="@+id/rowval"
            android:layout_marginBottom="4dp"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>