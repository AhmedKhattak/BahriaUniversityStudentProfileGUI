<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"

    android:id="@+id/examseatingplancard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/course"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Course"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/courseval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toRightOf="@+id/course"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseval"
            android:text="Date"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/dateval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toRightOf="@+id/date"
            android:layout_below="@+id/courseval"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateval"
            android:text="Time"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/timeval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toRightOf="@+id/time"
            android:layout_below="@+id/dateval"
            />
        <TextView
            android:id="@+id/room"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeval"
            android:text="Room"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/roomval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toRightOf="@+id/room"
            android:layout_below="@+id/timeval"

            />

        <TextView
            android:id="@+id/row"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roomval"
            android:text="Row"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/rowval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toRightOf="@+id/row"
            android:layout_below="@+id/roomval"
            />

        <TextView
            android:id="@+id/column"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowval"
            android:text="Column"
            android:textStyle="bold"
           />


        <TextView
            android:id="@+id/columnval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toRightOf="@+id/column"
            android:layout_below="@+id/rowval"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>