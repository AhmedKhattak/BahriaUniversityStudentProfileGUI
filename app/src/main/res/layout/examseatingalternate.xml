<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attendencecard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courseval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/course"
                android:text="course"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/courseval"
                android:layout_marginBottom="4dp"
                android:text="Date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/courseval"
                android:layout_toRightOf="@+id/date"
                android:text="-" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateval"
                android:layout_marginBottom="4dp"
                android:text="Time"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateval"
                android:layout_toRightOf="@+id/time"
                android:text="-" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/room"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeval"
                android:layout_marginBottom="4dp"
                android:text="Room"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/roomval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeval"
                android:layout_toRightOf="@+id/room"
                android:text="-"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roomval"
                android:layout_marginBottom="4dp"
                android:text="Row"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rowval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roomval"
                android:layout_toRightOf="@+id/row"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/column"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rowval"
                android:text="Column"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/columnval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rowval"
                android:layout_toRightOf="@+id/column"
                android:text="-" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>